    if [[ -n $long_usage ]]; then
        printf "dotf link - Make symbol link for packages\n"
        echo

    else
        printf "dotf link - Make symbol link for packages\n"
        echo

    fi

    printf "%s\n" "Usage:"
    printf "  dotf link [OPTIONS]\n"
    printf "  dotf link --help | -h\n"
    echo

    # :command.long_usage
    if [[ -n $long_usage ]]; then
        printf "%s\n" "Options:"

        # :command.usage_flags
        # :flag.usage
        printf "  %s\n" "--delete, -D"
        printf "    Unstow the package names that follow this option\n"
        echo

        # :flag.usage
        printf "  %s\n" "--restow, -R"
        printf "    Restow (like stow -D followed by stow -S)\n"
        echo

        # :flag.usage
        printf "  %s\n" "--adopt"
        printf "    (Use with care!)  Import existing files into stow package from target.\n    Please read stow docs before using.\n"
        echo

        # :flag.usage
        printf "  %s\n" "--simulate, -n"
        printf "    Do not actually make any filesystem changes\n"
        echo

        # :flag.usage
        printf "  %s\n" "--verbose, -v"
        printf "    Verbose output\n"
        echo

        # :command.usage_fixed_flags
        printf "  %s\n" "--help, -h"
        printf "    Show this help\n"
        echo

        # :command.usage_examples
        printf "%s\n" "Examples:"
        printf "  dotf link -v\n"
        printf "  dotf link -v -n\n"
        printf "  dotf link -v -n --adopt\n"
        echo

    fi
}

