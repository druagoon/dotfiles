root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[{GNUmakefile,[Mm]akefile,*.mk}]
indent_style = tab

[{*.go,go.mod,go.sum}]
indent_style = tab

[*.{rb,rake,gemspec,Rakefile,Guardfile,Capfile,Gemfile,config.ru}]
indent_size = 2
max_line_length = 80

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[.git*]
indent_style = tab
