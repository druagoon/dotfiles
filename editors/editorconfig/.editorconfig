root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[{GNUmakefile,[Mm]akefile,*.mk}]
indent_style = tab

[*.{sh,zsh}]
# shfmt
binary_next_line = true
function_next_line = false
keep_padding = true
space_redirects = false
switch_case_indent = true

[{*.go,go.mod,go.sum}]
indent_style = tab

[*.{rb,rake,gemspec,Rakefile,Guardfile,Capfile,Gemfile,config.ru}]
indent_size = 2
max_line_length = 80

[*.{js,jsx,ts,tsx,css,scss,html,vue}]
indent_size = 2

[*.{json,json5,jsonc}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[.git*]
indent_style = tab

[.condarc]
indent_size = 2
