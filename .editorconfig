root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[{GNUmakefile,[Mm]akefile,*.mk}]
indent_style = tab

[*.{sh,zsh}]
# shfmt
shell_variant = auto
binary_next_line = false
switch_case_indent = false
space_redirects = false
keep_padding = true
function_next_line = false

[{*.go,go.mod,go.sum}]
indent_style = tab

[{*.yml,*.yaml,.condarc}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[.git*]
indent_style = tab
